@{
}
@using (Html.BeginForm("Login", "Login", FormMethod.Post)){ 
<div class="container-fluid">
    <div class="row align-items-center">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Email</span>
            </div>
            <input aria-label="Email" type="text" id="txtLogin" name="txtLogin" class="form-control" />
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Password</span>
            </div>
            <input aria-label="Password" type="password" id="txtPassword" name="txtPassword" class="form-control" />
        </div>
        <div class="input-group">
            <input type="submit" id="btnSubmit" name="btnSubmit" class="btn btn-primary" />
            <input type="hidden" id="txtRedirect" name="txtRedirect" value="@Context.Request.Query["redirect"].ToString()" />
        </div>
    </div>
</div>
}